<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity"
    android:orientation="vertical"
    android:background="@color/appOrange"

    android:padding="16dp"
    >
    <LinearLayout

        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:weightSum="2">
        <TextView
            android:layout_weight="1"
            android:id="@+id/mainTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainTitle"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:fontFamily="@font/opensanssemibold"
            />
        <TextView
            android:id="@+id/motto_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/mainMotto"
            android:gravity="center"
            android:fontFamily="@font/opensansregular"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/alphamind_img"></ImageView>
    </LinearLayout>



    <LinearLayout
        android:background="@drawable/form_container"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/opensanssemibold"
            />
        <EditText
            android:id="@+id/signInEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/opensanssemibold"/>
        <EditText
            android:id="@+id/signInPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"/>
        <TextView
            android:padding="16dp"
            android:background="@color/appGreen"
            android:layout_marginTop="16dp"
            android:id="@+id/signInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SIGN IN"
            android:fontFamily="@font/opensanssemibold"

            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/forgotPasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/signUpTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont you have an account yet ?"
            android:layout_weight="1"
            android:gravity="end"

            />




    </LinearLayout>

</LinearLayout>